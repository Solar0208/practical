pip install nltk
pip install spacy

import nltk
from nltk import tokenize, tag, chunk

nltk.download('punkt')
nltk.download('averaged_perceptron_tagger')
nltk.download('maxent_ne_chunker')
nltk.download('words')

para = "Hello! My name is MCC. Today you'll be learning NLTK."

sents = tokenize.sent_tokenize(para)
print("\nSentence Tokenization\n===================\n", sents)

print("\nWord Tokenization\n===================\n")
tagged_words = []

for sent in sents:
    words = tokenize.word_tokenize(sent)
    print(words)
    tagged_words.append(tag.pos_tag(words))

print("\nPOS Tagging\n===========\n", tagged_words)

tree = []
for tags in tagged_words:
    tree.append(chunk.ne_chunk(tags))

print("\nChunking\n========\n", tree)
